extends layout

block content
  h1 Welcome to vinay's web pages
  p This is a sample web page with an interactive button.
  button(type="button", class="btn btn-secondary", onclick="boost()") Sample Button
  div#boost Add in extra
  script.
    let value = 0;
    let amt = 3;
    function boost() {
      amt += 1;
      value += amt;
      document.getElementById('boost').innerText = `Boosted ${value} by ${amt}`;
    }
if (!user)
a(href="/login") Login
br
a(href="/register") Register
if (user)
p You are currently logged in as #{user.username}
a(href="/gadget") Take me to gadgets
br
a(href="/logout") Logout
